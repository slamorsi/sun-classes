.page-header
  %h1 
    Sun Students
    %small
      =link_to 'Create a new student', new_student_path
.row
  .col-sm-6
    = form_tag import_students_path, multipart: true do
      %legend Import Students
      .form-group
        = file_field_tag :file
      = submit_tag "Import", :class => 'btn btn-primary'
    = form_tag clear_students_path, :class => 'top-buffer',:onsubmit=>"return confirm('This will delete all current students, are you sure?');" do
      = submit_tag "Clear Existing Students", :class => 'btn btn-danger'
  .col-sm-6
    = form_tag assign_all_students_path do
      %legend Class Assignment
      = submit_tag "Assign Students", :class => 'btn btn-success'
    = form_tag clear_all_assignments_students_path, :class => 'top-buffer',:onsubmit=>"return confirm('This will delete all class assignments, are you sure?');" do
      = submit_tag "Clear class assignments", :class => 'btn btn-danger'
.row
  =render :partial => 'list', :locals =>  {:students => @students}
  
