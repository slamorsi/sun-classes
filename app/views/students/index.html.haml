.page-header
  %h1 Sun Students
.row
  = form_tag import_students_path, multipart: true do
    %legend Import Students
    .form-group
      = file_field_tag :file
    = submit_tag "Import", :class => 'btn btn-primary'
  = form_tag clear_students_path, :class => 'top-buffer',:onsubmit=>"return confirm('This will delete all current students, are you sure?');" do
    = submit_tag "Clear Existing Students", :class => 'btn btn-danger'
.row
  %table.table.table-striped.table-hover.col-md-12.top-buffer
    %thead
      %tr 
        %th Last Name
        %th First Name
        %th Classes
        %th Preferences
    %tbody
      -@students.each do |s|
        %tr
          %td=s.last_name
          %td=s.first_name
          %td
          %td
            %ol
              -s.preferences.each do |p|
                %li 
                  "#{p.day} Hour #{p.hour} Preference##{p.order}:"
                  =link_to p.sun_class.name, p.sun_class
